{
  "scripts": {
    "build": "nest build --tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node -r tsconfig-paths/register dist/main",
    "start:cluster": "NODE_ENV=production node -r ./tsconfig-paths-bootstrap.cjs dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "_smart-knex": "ts-node -r tsconfig-paths/register node_modules/.bin/knex --knexfile knexfile.ts",
    "migration:make": "yarn _smart-knex migrate:make -- -x ts",
    "migration:up": "yarn _smart-knex migrate:up",
    "migration:latest": "yarn _smart-knex migrate:latest",
    "migration:rollback": "yarn _smart-knex migrate:rollback",
    "migration:down": "yarn _smart-knex migrate:down",
    "migration:list": "yarn _smart-knex migrate:list",
    "seed:make": "yarn _smart-knex seed:make -- -x ts",
    "seed:run": "yarn _smart-knex seed:run"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/platform-socket.io": "^10.3.10",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.3.10",
    "@types/compression": "^1.8.1",
    "@types/string-similarity": "^4.0.2",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "cache-manager": "^7.1.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.1",
    "firebase-admin": "^12.6.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "knex": "^3.1.0",
    "libphonenumber-js": "^1.11.4",
    "ll": "^1.2.0",
    "moment": "^2.30.1",
    "nvm": "^0.0.4",
    "objection": "^3.1.4",
    "oxide.ts": "^1.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "string-similarity": "^4.0.4",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "@libs/(.*)": "<rootDir>/libs/$1",
      "@modules/(.*)": "<rootDir>/modules/$1",
      "@infrastructure/(.*)": "<rootDir>/infrastructure/$1",
      "@domains/(.*)": "<rootDir>/taxi-context/domains/$1",
      "@domain-value-objects/(.*)": "<rootDir>/taxi-context/domain-value-objects/$1",
      "@third-parties/(.*)": "<rootDir>/third-parties/$1",
      "src/(.*)": "<rootDir>/$1"
    },
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "importSort": {
    ".js, .ts": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-for-jira-smart-commits"
    }
  },
  "validate-branch-name": {
    "pattern": "^LIV-\\d{1,5}-(feature|fix|chore|hotfix|refactor)/.+$|^(feature|fix|chore|hotfix|refactor)/.+$",
    "errorMsg": "Invalid branch name"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
